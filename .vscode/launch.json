			"cwd": "${workspaceFolder}/packages/demo",
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "ss build",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/packages/ss_cli/bin/ss_cli.js",
      "args": ["build", "index2.js", "--mode", "development"],
			"cwd": "${workspaceFolder}/packages/demo_test",
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "ss serve",
			"skipFiles": [
				"<node_internals>/**"
